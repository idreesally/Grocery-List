<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <TextView
                android:id="@+id/tile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/saveButton"
                android:text="@string/enter_list"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/groceryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/saveButton"
                android:layout_below="@+id/tile"
                android:layout_marginEnd="40dp" />

            <TextView
                android:id="@+id/tile2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="Enter Quantity"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/groceryList2"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/groceryList"
                android:layout_alignStart="@+id/tile2"
                android:layout_below="@+id/tile2" />
            <Button
                android:id="@+id/saveButton"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groceryList"
                android:layout_centerHorizontal="true"
                android:background="@android:color/holo_red_light"
                android:text="@string/save_title"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>